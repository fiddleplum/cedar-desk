{
	"compilerOptions": {
		"target": "ES2018",
		"noImplicitAny": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"pine-lib": [ "../../pine-lib/src/index" ],
			"elm-app": [ "../../elm-app/src/index" ]
		}
	},
	"include": [
		"src/**/*"
	]
}
